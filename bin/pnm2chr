#!/usr/bin/env perl
use strict;
use warnings;

use Games::NES::SpriteMaker 'image_to_sprite';

my $data;
if (@ARGV) {
    $data = $ARGV[0];
}
else {
    $data = \(do { local $/; <> });
}

my $sprite_data = image_to_sprite($data);

if (@ARGV) {
    (my $outfile = $data) =~ s/\..*$/.chr/;
    open my $fh, '>', $outfile
        or die "Couldn't open $outfile for writing: $!";
    $fh->print($sprite_data);
    $fh->close;
}
else {
    print $sprite_data;
}
